<%- include("../partials/header") %>

<div>
        <p>My games:</p>
        <ul>
            <% games.forEach(game => { %>
            <li class="inline-form-delete">
                <form action="/users/<%= user._id%>/games/<%= game._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="X" class="x-button">
                </form>
                <a href="/games/<%= game._id %>"> <%= game.name %> </a>
            </li>
            <% }); %>
        </ul>
        <a href="/games/new">Add New Game</a>
    </div>

<%- include("../partials/footer") %>